<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="co.com.votre.camel.repository.product.IProductRepository">

    <resultMap type="co.com.votre.camel.dto.product.MessageDTO"
        id="campaing">
        <result column="MEDIAMIN" property="mediaMin" />
        <result column="MEDIAMAX" property="mediaMax" />
    </resultMap>

    <select id="getCampaignRank" resultMap="campaing" parameterType="map"> 
        SELECT TRIM(MIN(MMMEDA)) AS MEDIAMIN, TRIM(MAX(MMMEDA)) AS MEDIAMAX 
        FROM OPF${company}.PMAMED 
        WHERE SUBSTR(MMMEDA, 1,2) = SUBSTR(#{media}, 1, 2) 
    </select>

    <select id="postCampaignRank" resultMap="campaing"
        parameterType="co.com.votre.camel.dto.product.CampaingDTO"> 
        SELECT TRIM(MIN(MMMEDA)) AS MEDIAMIN, TRIM(MAX(MMMEDA)) AS MEDIAMAX 
        FROM OPF${company}.PMAMED 
        WHERE SUBSTR(MMMEDA, 1,2)
        = SUBSTR(#{media}, 1, 2) 
    </select>

</mapper>